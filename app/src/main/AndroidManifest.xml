<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hridoy.menu">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Menu_LIstActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".StartingPoint" />
        <activity android:name=".TextPlay" />
        <activity android:name=".SoundStaff" />
        <activity android:name=".SharedPreferences" />
        <activity android:name=".InternalData" />
        <activity android:name=".Email" />
        <activity android:name=".Flipper" />
        <activity
            android:name=".SimpleBrowser"
            android:label="Browser" />
        <activity android:name=".Data" />
        <activity
            android:name=".Tabs"
            android:label="Tabs Class" />
        <activity android:name=".GFX" />
        <activity android:name=".GFXSurface" />
        <activity android:name=".OpenedClass" />
        <activity
            android:name=".Camera"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AboutUs"
            android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <action android:name="com.example.hridoy.ABOUT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Prefs">
            <intent-filter>
                <action android:name="com.example.hridoy.PREFS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Slider" />
        <activity android:name=".CameraStackOverflow" />
        <activity android:name=".ExternalStorage"></activity>
    </application>

</manifest>